---
import { PROJECTS } from "../data"
---

<div
  class="grid gap-8 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto"
>
  {
    PROJECTS.map((project) => (
      <article class="relative items-center rounded-lg">
        <a
          href={`/${project.slug}`}
          class="group hover:scale-110 block transition"
        >
          <img
            class="w-full rounded-lg overflow-hidden object-cover aspect-video bg-slate-950"
            src=""
            alt={`Captura de pantalla del proyecto ${project.title}`}
          />
        </a>
        <div class="">
          <h2 class="text-4xl font-bold tracking-tight text-gray-200">
            {project.title}
          </h2>
          <p class="mt-3 mb-4 font-light text-gray-500">
            {project.description}
          </p>
        </div>
      </article>
    ))
  }
</div>
