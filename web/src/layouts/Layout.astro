---
interface Props {
  title: string
}

const { title } = Astro.props
const description =
  "Proyectos prácticos elaborados unicamente con HTML, CSS Y JavaScript, para mejorar en la lógica de JavaScript Vanilla."
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="relative h-full w-full bg-slate-950">
      <div
        class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_500px_at_50%_200px,#3e3e3e,transparent)]"
      >
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: system-ui, sans-serif;
  }
</style>
